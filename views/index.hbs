<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- 新增create按鈕 -->
<div class="createBtn">
  <form action="/restaurants/new">
    <button type="summit" class="btn btn-outline-danger">
      <i class="fas fa-plus-circle"></i>加入新餐廳</button>
  </form>
</div>


<!-- restaurant list -->
<div class="container mt-5">
  {{#if restaurants}}
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{this.id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i>{{this.category}}
              </div>
              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
          </div>
        </a>
        <!-- 新增detail按鈕、edit按鈕、刪除按鈕 -->
        <div class="buttons">
          <div class="edit">
            <form action="/restaurants/{{this._id}}/edit" method="GET" style="display: inline;">
              <button class="btn btn-success">
                <i class="fas fa-edit"></i>edit
              </button>
            </form>
          </div>
          <div class="detail">
            <a href="./restaurants/{{ this._id }}" style="text-decoration:none;">
              <button class="btn btn-primary">
                <i class="fas fa-info-circle"></i>detail
              </button>
            </a>
          </div>
          <div class="delete">
            <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
              <button type="submit" class="btn btn-warning"><i class="fas fa-trash-alt"></i>delete</button>
            </form>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
  {{else}}
  <!-- alert -->
  <div class="d-flex flex-column align-items-center p-5 bg-light">
    <h1 class="p-1">Cannot find restaurant : {{keyword}}</h1>
    <p class="p-1">Please enter another keyword ... </p>
    <a class="btn btn-secondary btn-sm" href="/" role="button"> back <i class="fas fa-undo"></i></a>
  </div>
  {{/if}}
</div>