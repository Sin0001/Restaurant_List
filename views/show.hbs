<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <!-- 新增edit按鈕、delete按鈕、back按鈕 -->
      <div class="buttons">
        <div class="edit">
          <a href="/restaurants/{{ restaurant._id }}/edit" style="text-decoration:none;">
            <button class="btn btn-success">
              <i class="fas fa-edit"></i>edit
            </button>
          </a>
        </div>
        <div class="delete">
          <form action="/restaurants/{{ restaurant._id }}/delete" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-warning"><i class="fas fa-trash-alt"></i>delete</button>
          </form>
        </div>
        <div class="back">
          <a href="/" style="text-decoration:none;">
            <button class="btn btn-secondary">
              <i class="fas fa-undo"></i>back
            </button>
          </a>
        </div>
      </div>


      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>